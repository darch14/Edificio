<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignTop="@+id/txtNomenclaturaP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />

        <TextView
            android:id="@+id/txtNomenclaturaP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtPisoP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtNomenclaturaP"
            android:layout_alignStart="@+id/txtNomenclaturaP"
            android:layout_below="@+id/txtNomenclaturaP"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtBalconP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtPisoP"
            android:layout_alignStart="@+id/txtPisoP"
            android:layout_below="@+id/txtPisoP"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/txtMetrosP"
            android:layout_toStartOf="@+id/txtMetrosP"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtSombraP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtBalconP"
            android:layout_alignRight="@+id/txtBalconP"
            android:layout_below="@+id/txtBalconP"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtMetrosP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNomenclaturaP"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"
            android:layout_toEndOf="@+id/txtPisoP"
            android:layout_toRightOf="@+id/txtPisoP"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtPrecioP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtMetrosP"
            android:layout_alignStart="@+id/txtMetrosP"
            android:layout_below="@+id/txtMetrosP"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="@android:color/black" />
    </RelativeLayout>
</LinearLayout>